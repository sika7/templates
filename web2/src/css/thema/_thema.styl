}


.breadcrumb{
  text-align: left;
  max-width: $container-width;
  margin: 1em auto;
  padding: 0 1em;
  &__item {
    display: inline-block;
    margin-right: 1em;
    &:before {
      content: "\f054";
      font-family: FontAwesome;
      margin-right: 1em;
    }
    &:first-child:before {
      content: "";
      display: none;
    }
  }
  &__link {
    display: inline-block;
  }
}



.mobile{
  position: relative;
  &--open {
    opacity: 1;
    z-index: 1;
    &__menu{
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      margin: auto;
      z-index: 100;
      transition: opacity 0.5s;
      opacity: 0;
    }
  }
  &__toggle{
    display: block;
    position: fixed;
    top: 15px;
    right: 15px;
    padding: 5px 10px;
    width: 80px;
    font-size: 1em;
  }
}



// pager
.pager {
  padding: 3px 1em;
  max-width: $container-width;
  margin: 1em auto;
  &__item{
    display: inline-block;
    text-align: center;
    margin: 0 0.5em;
    border: solid 1px #333;
  }
  &__link{
    display: block;
    padding: 5px 5px;
    width: 27px;
    color: #333;
    background-color: #ddd;
  }
  &__text{
    border-radius: 0;
    width: auto;
  }
}




/*---------------------------------------------------*/
/*                     Parts                         */
/*---------------------------------------------------*/




.form{
  &__group{

  }
  &__horizontal{

  }
  &__label{
    display: block;
  }
  &__danger{
    color: red;
    font-size: 0.8em;
  }
  &__control{
    padding: 5px;
    border: solid 1px #333;
    background-color: #fff;
  }
  &__textarea{
    padding: 5px;
    border: solid 1px #333;
    background-color: #fff;
  }
  &__helpBlock{
    font-size: 0.8em;
    color: #999;
  }
  &__checkbox{
    display: none;
    &+.checkboxIcon {
      position: relative;
      vertical-align: middle;
      &:before {
        content: "\f372";
        font-family: "Ionicons";
        color: #ccc;
        font-size: 22px;
      }
    }

    &:checked+.checkboxIcon:before {
      content: "\f374";
      color: #17bcdf;
    }
  }
  &__radio {
    display: none;
    &+.radioIcon:before {
      content: "\f3a6";
      font-family: "Ionicons";
      color: #ccc;
      font-size: 22px;
    }
    &:checked+.radioIcon:before {
      content: "\f3a7";
      color: #17bcdf;
    }
  }
  &__fileWap {
    color: red;
    padding: 3px 6px;
    border: solid 1px red;
    input[type="file"] {
      display: none;
    }
  }
}


.table {
  border-collapse: collapse;
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
  &__td {
    padding: 0.8em 1em;
  }
  &__th {
    width: 30%;
    text-align: right;
    font-weight: normal;
  }

  mq-down(md) {
    padding: 0 10px;
    &__td {
      width: 100%;
      display: block;
    }
    &__th {
      text-align: center;
    }
  }
}





