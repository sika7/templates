// 変数の定義
main-color = #fff;
sub-color = #333;
bass-color = #f7f4e8;




.cover {
  &__image{
    width: 100%;
  }
}


// 固定メニューでページ移管先のスクロール一がずれる問題を解決する
.scrollTarget{
  position: relative;
  display: block;
  top:-30px;
}


.btn{
  btn;
  &--ghost{
    btnGhost(#333);
    width: 200px;
  }
  &--flat{
    btnFlat(#333);
    width: 200px;
  }
}

// 比率
.proportion{
  position: relative;
  width: 100%;
  &:after{
    padding-top: 100%;
  }
  &__item{
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
  }
}


// 進捗バー
.progress{
  border: none;
  border-radius: 290486px;
  display: block;
  height: 1rem;
  overflow: hidden;
  padding: 0;
  width: 100%;
}


// 引用
.blockquote{
  padding: 0.5em 1em;
  border:solid 2px #333;
}

