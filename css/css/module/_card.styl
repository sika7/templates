.card{
	border:solid 1px #aaa;
	width: 100%;
    height: 100%;
	padding: 1em;
	position: relative;
	&__img{
		margin: -1em -1em 1em;
		img{
			width: 100%;
		}
	}
	&__title{
		font-size: 1.4rem;
		line-height: 1em;
		margin-bottom: 1me;
	}
	&__content{
		margin-top: 1em;
	}
	&__icon{
		position: absolute;
		top: 0;
		left: 0;
	}
	&__btnWap{
		min-height: 40px;
		height: 100%;
	}
	&__btn{
		position: absolute;
		bottom: 10px;
		left: 0;
		right: 0;
		width: 90%;
		margin: auto;
	}
}