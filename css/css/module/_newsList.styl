.newsList{
  overflow: hidden;
  height: 200px;
  border: solid 1px #333;
  padding: 1em;
  line-height: 1.2em;
  &__item{
    display: flex;
    font-size: 1.4rem;
    margin-bottom: 0.5em;
    border-bottom: solid 1px #999;
  }
  &__data{
    display: block;
    margin-right: 1em;
  }
  &__link{
    color: #333;
  }
}
